{
  "name": "rtfx",
  "version": "0.0.0",
  "prettier": "@awdware/prettier-config",
  "scripts": {
    "ng": "ng",
    "electron": "electron",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "copy-dist": "yarn del-cli app/rtfx/** && yarn cpy . ../../app/rtfx --cwd dist/rtfx",
    "build-electron": "yarn tsc -p app/tsconfig.json",
    "copy-app": "yarn copy-dist",
    "start-app": "set NODE_ENV=development && electron ./app/main.js --no-sandbox",
    "app:dir": "yarn build-electron && yarn copy-app && electron-builder --dir",
    "app:dist": "yarn build-electron && yarn copy-app && electron-builder -w"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.0.0",
    "@angular/common": "^15.0.0",
    "@angular/compiler": "^15.0.0",
    "@angular/core": "^15.0.0",
    "@angular/forms": "^15.0.0",
    "@angular/platform-browser": "^15.0.0",
    "@angular/platform-browser-dynamic": "^15.0.0",
    "@angular/router": "^15.0.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.0.0",
    "@angular/cli": "~15.0.0",
    "@angular/compiler-cli": "^15.0.0",
    "@awdware/prettier-config": "^0.0.2",
    "@types/electron-localshortcut": "^3.1.0",
    "@types/jasmine": "~4.0.0",
    "cpy-cli": "^4.2.0",
    "del-cli": "^5.0.0",
    "electron": "^21.2.3",
    "electron-builder": "^23.6.0",
    "electron-localshortcut": "^3.2.1",
    "fs-extra": "^10.1.0",
    "jasmine-core": "~4.3.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "~4.8.4"
  }
}
