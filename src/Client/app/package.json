{
  "name": "rtfx-app",
  "description": "RTFX Electron App",
  "version": "0.0.1",
  "main": "main.js",
  "private": true,
  "prettier": "@awdware/prettier-config",
  "scripts": {
    "build-electron": "yarn tsc --project tsconfig.json",
    "serve-electron": "yarn build-electron --watch",
    "start-app": "cross-env NODE_ENV=\"development\" electron ./app/dist/app/src/main.js --no-sandbox",
    "app:dir": "yarn build-electron && yarn copy-app && electron-builder --dir",
    "app:dist": "yarn build-electron && yarn copy-app && electron-builder -wl"
  },
  "dependencies": {
    "@awdware/prettier-config": "^0.0.2",
    "electron-localshortcut": "^3.2.1",
    "fs-extra": "^10.1.0"
  },
  "devDependencies": {
    "@types/electron-localshortcut": "^3.1.0",
    "cross-env": "^7.0.3",
    "electron": "^21.2.3",
    "electron-builder": "^23.6.0",
    "electron-localshortcut": "^3.2.1",
    "electron-reloader": "^1.2.3",
    "typescript": "~4.8.4"
  }
}
